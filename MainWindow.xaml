<Window x:Class="CharPad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CharPad" Height="600" Width="450" WindowStartupLocation="CenterScreen" 
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" ResizeMode="CanResizeWithGrip"
        MinHeight="400" MinWidth="300">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_New Party" />
                    <MenuItem Header="_Load Party..." />
                    <MenuItem Header="_Save Party" />
                    <MenuItem Header="Save Party _As..." />
                    <Separator />
                    <MenuItem Header="E_xit" />
                </MenuItem>
                <MenuItem Header="_Character">
                    <MenuItem Header="_New Character..." />
                    <MenuItem Header="_Load Character..." />
                    <MenuItem Name="menuSaveCharacter" Header="_Save Character" />
                </MenuItem>
            </Menu>
            
            <StatusBar DockPanel.Dock="Bottom">
                <StatusBarItem Name="sbMessage" />
            </StatusBar>
            
            <StackPanel Name="charPanel" Orientation="Vertical"></StackPanel>
        </DockPanel>
    </Grid>
</Window>
